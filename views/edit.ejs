<%- include("header") %>

<div class="container">
    <div class="row">
        <h1 style="text-align: center" id="header">Edit <%= campagrounds.name %></h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/campagrounds/<%= campagrounds._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="name" value="<%= campagrounds.name %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="image" value="<%= campagrounds.image %>">
                </div>
				<div class="form-group">
					<input class="form-control" type="number" name="price" value="<%= campagrounds.price %>">
				</div >
                <div class="form-group">
                    <input class="form-control" type="text" name="description" value="<%= campagrounds.description %>">
				</div>
				<div class="form-group">
					<input class="form-control" type="text" name="loc" value="<%= campagrounds.loc %>">
				</div >
				<div class="form-group">
					<input class="form-control" type="text" name="bw" value="<%= campagrounds.bw %>">
				</div >	
				<div class="form-group">
					<input class="form-control" type="text" name="ac" value="<%= campagrounds.ac %>">
				</div >
				<div class="form-group">
					<input class="form-control" type="text" name="am" value="<%= campagrounds.am %>">
				</div >	
                <div class="form-group">
                    <button class="btn btn-lg btn-danger btn-block">Submit!</button>
                </div>
            </form>
            <a href="/campagrounds" id="link">Go Back</a>
        </div>
    </div>
</div>

<%- include("footer") %>