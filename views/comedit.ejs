<%- include("header") %>
<div class="container">
    <div class="row">
        <h1 style="text-align: center" id="header">Edit Comment</h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/campagrounds/<%= campaground_id %>/comments/<%= comment._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="name" value="<%= comment.text %>">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-danger btn-block">Submit!</button>
                </div>
            </form>
            <a href="/campagrounds" id="link">Go Back</a>
        </div>
    </div>
</div>
<%- include("footer") %>