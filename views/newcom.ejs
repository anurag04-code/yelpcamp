<%- include("header") %>
<div class="container">
	<div class="row">
		<h1 style="text-align:center" id="header">Add new comments to the <%= Campaground.name %></h1>
		<div style="width: 30% ; margin: 25px auto">
			<form action='/campagrounds/<%= Campaground._id %>/comments' method="POST">
				<div class="form-group">
					<input class="form-control" type="text" name="text" placeholder="comment">
				</div>
				<div class="form-group">
					<input class="form-control" type="text" name="author" placeholder="author">
				</div >
				<div style="margin-bottom: 5px">
					<button class="btn btn-danger btn-lg btn-block">submit</button>
				</div>	
			</form>
			<a href="/campagrounds/<%= Campaground._id %>" id="link">GO back</a>
		</div>	
	</div>	
</div>	

<%- include("footer") %>
