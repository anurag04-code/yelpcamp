<%- include("header") %>
<div class="container">
	<div class="row">
		<h1 style="text-align:center" id="header">Add new Campagrounds</h1>
		<div style="width: 30% ; margin: 25px auto">
			<form action='/campagrounds' method="POST">
				<div class="form-group">
					<input class="form-control" type="text" name="name" placeholder="name">
				</div>
				<div class="form-group">
					<input class="form-control" type="text" name="image" placeholder="url">
				</div >
				<div class="form-group">
					<input class="form-control" type="number" name="price" placeholder="price" min="0.01" step="0.01">
				</div >
				<div class="form-group">
					<input class="form-control" type="text" name="description" placeholder="description">
				</div >
				<div class="form-group">
					<input class="form-control" type="text" name="loc" placeholder="location">
				</div >
				<div class="form-group">
					<input class="form-control" type="text" name="bw" placeholder="booking window">
				</div >
				<div class="form-group">
					<input class="form-control" type="text" name="ac" placeholder="accomodations(ex. car,boat,house)">
				</div>
				<div>
					<input class="form-control" type="text" name="am" placeholder="amenities(ex. Food-pantry,WiFi,Charger)">
				</div>
				<div style="margin-top: 15px">
					<button class="btn btn-danger btn-lg btn-block">submit</button>
				</div>
			</form>
			<a href="/campagrounds" id="link">GO back</a>
		</div>	
	</div>	
</div>	

<%- include("footer") %>